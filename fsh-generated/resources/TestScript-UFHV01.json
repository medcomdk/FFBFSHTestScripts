            "warningOnly": false
          }
        },
        {
          "assert": {
            "description": "Confirm that the there are two Provenances",
            "direction": "request",
            "expression": "Bundle.entry.resource.ofType(Provenance).count() = 2",
            "warningOnly": false
          }
        },
        {
          "assert": {
            "description": "Confirm that the id of the original message provenance exist in the ack",
            "direction": "request",
