  "fixture": [
    {
      "id": "bundle-create-STIN",
      "autocreate": false,
      "autodelete": false,
      "resource": {
        "reference": "/FHIRSandbox/MedCom/401-Hospitalnotification/receive/Userstory/_reference/resources/HospitalNotificationMessage-STIN-K1.xml"
      }
    },
    {
      "id": "bundle-create-SLHJ",
      "autocreate": false,
